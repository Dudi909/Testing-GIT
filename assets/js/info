// Variable
// 1. Var = Old School tidak usah digunakan lagi
var x = 0
x = 15
console.log(x)

// variable  modern
//1. Let
let z = 10
z = 5
// let 0 // huruf awal setelah LET tidak boleh menggunakan angka atau simpbol
// kecuali underscore "_" dan dolar "$"
let Z0 = 10
//let _a = test 
let $a = 10
// let a* = 10
let Z = 15  //Huruf besar akan disimpan di tempat berbeda 
let isCarBroken = true

console.log(z)

//2. Const (data tidak bisa diubah)
const COLOR_RED = "red"
const y = 5
//y = 10
//consolelog(y)

//Type data
//primitif
let text = "lorem ipsum" //string  pake  quote ""
let number = 0 //number no quote
let kosong = null
let undef  //undefined
let undef2 = undefined
let ismorning = true //bolean
let iseveneing = false
//non primitif
//1. Object --> descriptip  --> contoh: deskripsi user
const zenix = {
        brand: 'Toyota',
        mesin: 'hybrid',
        warna: 'Black',
        spec: { //nested
                mesin: '2.0L',
                rangka: 'TNGA'
        }
}
console.log(zenix)
console.log(zenix.mesin)
zenix.mesin = 'diesel'
console.log(zenix)

// console. log (variable (titik) -> panggil detail 

//2. array --> list --> contoh daftar user --> ked dikasi koma
// array dimulai dari 0,1,2 danseterusnya

const mobilToyota = ['GR yaris', 'reborn', 'Supra']

console.log(mobilToyota[2])

// untuk mengganti data dalam array
mobilToyota[1] = "innova Reborn"
console.log(mobilToyota[1])

