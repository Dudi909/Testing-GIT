//operator = - * & % / !
//1. aritmatika
const tambah = 1 + 1; 
// angka 1 adalah operand
// simbol "+" adalah operator
const kali = 2 * 2;
const hasilbagi = 2 % 2;
const pangkat = 2**2;
const pembagian = 4 / 2; //pake slash

//2. string concatenation // menggabungkan 2 
const a = 'a'
const b = 'b'
const newText = a + b;
console.log(newText)
console.log('1' + 1)
// ketika string ditambah number jadi 11
// ketika string dikurang number jadi 0
console.log('10' + ['car', 'test'])

//3. Assignment  --> pake LET
let seribu = 1000
seribu = seribu + 500
seribu += 500 //angka seribu tidak ditulis lagi
console.log(seribu)

//4. logical > , < , <= , >= , === , !== , !=
const x1 = 1;
const x2 = 2;
const result = x2 > x1;
console.log(result);

console.log(1 === 1) // true 
console.log('1' == 1) // true --> tidak ada pengecekan tipe data (sting )
console.log('1' === 1) // false --> ada pengecekaan tipe data  harus sama, kemudian nilai data

console.log(1 !== 1) // not equal cek tipe data dan nilai
console.log('2' != 2) // dicek hanya nilai data


